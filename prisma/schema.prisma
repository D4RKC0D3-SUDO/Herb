generator client {
  provider = "prisma-client-js"
  output   = "./app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prescription {
  id            Int           @id @default(autoincrement())
  name          String        @unique // ✅ Renamed from 'prescription' to 'name' to match seed.js
  description   String?       // ✅ Optional field to store remedy purpose
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  alternatives  Alternative[]
}

model Alternative {
  id             Int          @id @default(autoincrement())
  name           String
  source         String
  use            String
  dosage         String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  prescription   Prescription @relation(fields: [prescriptionId], references: [id], onDelete: Cascade)
  prescriptionId Int
}
